<% layout('layouts/boilerplate') %>

<div class="container d-flex justify-content-center align-items-center mt-2 mb-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img src="https://images.unsplash.com/photo-1533186758335-367d64aeb7ff?ixlib=rb-1.2.1&ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&auto=format&fit=crop&w=1255&q=80" alt="Login page image" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">Регистрация</h5>
                    <form action="/register" method="post" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Потребителско име</label>
                            <input class="form-control" type="text" name="username" id="username" autofocus required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="email">Имейл адрес</label>
                            <input class="form-control" type="email" name="email" id="email" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Парола</label>
                            <input class="form-control" type="password" name="password" id="password" required>
                        </div>      
                        <div class="d-grid gap-2">
                            <button class="btn btn-success">Регистрация</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

